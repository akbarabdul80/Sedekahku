<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:background="@drawable/raund_edittext">

        <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
            android:id="@+id/round_img"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:corner_radius="20dp">

        <ImageView
            android:id="@+id/image_viewmasjid"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="@drawable/masjid"/>

        </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

        <TextView
            android:id="@+id/name_masjid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxWidth="180dp"
            android:maxLines="1"
            android:layout_below="@id/round_img"
            android:textAlignment="center"
            android:text="Nama Masjid fjdfjdnvcmldnsansajdnsajnnf"/>

        <TextView
            android:id="@+id/alamat_masjid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Masjidd fsd ggfgfdfgfg"
            android:layout_marginTop="-5dp"
            android:maxLines="1"
            android:maxWidth="180dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_below="@id/name_masjid"
            android:textSize="15sp"/>

        <Button
            android:id="@+id/btn_masjid"
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_height="30dp"
            android:text="PILIH"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:background="@drawable/raund_pilih"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/alamat_masjid"/>
    </RelativeLayout>

</LinearLayout>